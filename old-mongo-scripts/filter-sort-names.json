db.adCrossmatch.aggregate([
	{ $unwind : "$adNames" }, 
	{ $sort : { 
		"_id" : 1, "adNames.score" : -1
		}
	},
	{ $match : { 
		"adNames.score" : { $lt : 4 }
		}
	},
	{ $group : {
		"_id" : "$_id", "adNames" : { $addToSet : "$adNames" }
		}
	}
]).pretty()

